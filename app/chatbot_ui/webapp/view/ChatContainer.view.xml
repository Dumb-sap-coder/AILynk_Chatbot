<mvc:View
  controllerName="chatbotui.controller.ChatContainer"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:layout="sap.ui.layout"
  displayBlock="true">

  <Page id="_IDchatPage" enableScrolling="false">
    <customHeader>
      <Bar id="chatHeader">
        <contentLeft>
          <HBox id="_IDGenHBox1" width="100%" justifyContent="Start" alignItems="Center" class="headerHBox">
            <Image id="_IDGenImage" height="64px" width="64px" />
            <Title id="_IDGenTitle" text="Uploara" level="H2" />
          </HBox>
        </contentLeft>
      </Bar>
    </customHeader>

    <VBox id="mainVBox" fitContainer="true" class="chatMainVBox">

      <!-- Welcome container only visible on very first launch -->
      <VBox id="welcomeContainer" alignItems="Center" justifyContent="Center"
            class="welcomeContainer" height="100%" visible="true">
        <IllustratedMessage
          id="welcomeIllustration"
          illustrationType="sapIllus-Survey"
          title="Welcome to Uploara"
          description="Start typing below to chat or upload a file." />
      </VBox>

      <!-- Scrollable chat area -->
      <ScrollContainer id="chatScroll" height="93%" width="100%" vertical="true" horizontal="false" visible="false">
        <VBox id="chatMessagesBox" class="sapUiSmallMargin"/>
      </ScrollContainer>
    </VBox>

    <!-- Footer input area -->
    <footer>
      <OverflowToolbar id="chatFooterToolbar" class="chatFooterBar" visible="true">
        <HBox id="_IDGenHBox3" class="footerHBox" alignItems="Center" justifyContent="SpaceBetween" width="100%">
          <Button id="uploadButton" icon="sap-icon://attachment" tooltip="Upload File" press="onFileUpload"/>
          <VBox id="inputWrapper" width="100%">
            <TextArea
              id="messageInput"
              growing="true"
              growingMaxLines="3"
              placeholder="Type your message..."
              class="footerInput capsuleInput"
              width="100%" />
          </VBox>
          <HBox id="_IDGenHBox4" alignItems="Center" renderType="Div">
            <Button id="micButton" icon="sap-icon://microphone" tooltip="Voice Input" press="onVoiceInput"/>
            <Button id="sendButton" icon="sap-icon://paper-plane" type="Emphasized" tooltip="Send Message" press="onSend"/>
          </HBox>
        </HBox>
      </OverflowToolbar>
    </footer>
  </Page>
</mvc:View>
